@model LibApp.Domain.Dtos.Book.BookDetailsDto

@{ 
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Author Name: @Model.AuthorName</li>
    <li>Genre: @Model.Genre</li>
    <li>Release Date: @Model.ReleaseDate</li>
    <li>Date Added: @Model.DateAdded</li>
    <li>Numbers in Stock: @Model.NumberInStock</li>
</ul>

@if (this.User.IsInRole("StoreManager") || this.User.IsInRole("Owner"))
{
    <p>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id" >Edit Book</a>
    </p>
}
